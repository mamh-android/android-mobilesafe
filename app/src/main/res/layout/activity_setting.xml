<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/green"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <com.example.mamh.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        itheima:atitle="设置自动更新"
        itheima:desc_off="自动更新：关闭"
        itheima:desc_on="自动更新：打开" />

    <com.example.mamh.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_show_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        itheima:atitle="开启来电号码归属地显示"
        itheima:desc_off="号码归属地显示：关闭"
        itheima:desc_on="号码归属地显示：打开" />

    <com.example.mamh.mobilesafe.ui.SettingClikcView
        android:id="@+id/scv_changebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        itheima:atitle="设置归属地显示风格" />

</LinearLayout>
